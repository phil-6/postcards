<div class="vs-form">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
    <div class="form-group">
      <%= render "devise/shared/error_messages", resource: resource %>
      <p class="text-danger">
        <% if flash[:alert] %>
          <%= flash[:alert] %>
        <% end %>
      </p>
    </div>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group floating-label">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Password' %>
      <%= f.label :password, "New password" %>
    </div>

    <div class="form-group floating-label">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Password Confirmation' %>
      <%= f.label :password_confirmation, "Confirm new password" %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Change my password", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="other-actions">
    <%= render "devise/shared/links" %>
  </div>
</div>