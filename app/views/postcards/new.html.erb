
<div class="vs-form">
  <h1>Send a Postcard</h1>
  <%= render partial: 'layouts/alerts' %>

  <%= form_for @postcard, url: {action: "create"} do |postcard_form| %>
    <div class="form-group floating-label">
      <%= postcard_form.text_field :from_location, class: 'form-control', :required => true, :placeholder => 'Where are you sending this postcard from?'  %>
      <%= postcard_form.label :name, 'Sent From' %>
    </div>

    <div class="form-group floating-label">
      <%= postcard_form.text_area :message, class: 'form-control', :required => true, :placeholder => 'What\'s the message you want to send?'   %>
      <%= postcard_form.label :message %>
    </div>

    <div class="form-group floating-label">
      <%= postcard_form.url_field :image_link, class: 'form-control', :required => false, :placeholder => 'Link to an image (try imgur.com)'  %>
      <%= postcard_form.label :web_link, 'External Link' %>
    </div>

    <div class="actions form-group">
      <%= postcard_form.submit "Send Postcard", class: 'btn btn-lg btn-primary'  %>
    </div>
    <div class="other-actions">
      <%= link_to "Back", :back, class: 'btn btn-secondary' %>
    </div>

  <% end %>

</div>